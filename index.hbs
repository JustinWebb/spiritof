{{!< default}}

{{> header }}

<main class="main_meditation" role="main">

  {{#foreach posts}}
  <article class="article_mediation" role="article" itemscope itemtype="http://schema.org/Article">
    <header class="postheader_mediation">
      <time class="date_mediation" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
      <h1 class="posttitle_mediation" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h1>
    </header>
    <div class="posttags_mediation">
      {{content}}
    </div>
    {{#if tags}}
      Tags: {{tags separator=' | '}}
    {{/if}}
  </article>
  {{/foreach}}

  {{#if pagination}}
  <div class="pagination_meditation">
    {{{pagination}}}
  </div>
  {{/if}}

</main>

{{> footer }}
